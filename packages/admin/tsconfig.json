{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Node",
        "strict": true,
        "allowJs": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "types": ["node", "vite/client", "element-plus/global"],
        "baseUrl": ".",
        "paths": {
            "@": ["./src"]
        }
    },
    "include": [
        "./src/**/*.d.ts",
        "./src/**/*.ts",
        "./src/**/*.js",
        "./src/**/*.vue"
    ],
    "exclude": ["node_modules", "dist"],
    "vueCompilerOptions": {
        "experimentalDisableTemplateSupport": true
    }
}
